{
  "manifest_version": 3,
  "name": "Monkeytype Universal Theme Selector",
  "description": "Apply Monkeytype-inspired palettes to any site with a universal theme overlay and quick selector.",
  "version": "0.1.0",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Monkeytype Themes",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["themes/catalog.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
